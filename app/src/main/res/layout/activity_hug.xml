<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/scroll"
            style="@style/scroll">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/activity_hug"
                    style="@style/relativeLayout"
                    tools:context="pm.anna.needahug.HugActivity">
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/transparent"
            android:elevation="0dp"
            android:title="@null"
            android:titleTextColor="@color/semi_transparent"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <TextView
                android:id="@+id/hi"
                style="@style/hiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hi_message"
                android:textColor="@color/semi_transparent"
                />
        </android.support.v7.widget.Toolbar>


        <TextView
            android:id="@+id/hugTextView"
            style="@style/hugText"
            android:text="@string/rach_11_feb"
            />

        <Button
            android:id="@+id/showHugButton"
            style="@style/Button"
            android:text="@string/button_text"
            />
        <ImageButton
           style="@style/share"
            android:onClick="SHARE"/>

    </RelativeLayout>
</ScrollView>